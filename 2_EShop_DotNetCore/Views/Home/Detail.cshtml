@model DetailsViewModel;
@{
    ViewData["Title"] = "Detail of " + Model.Product.Name;
}

<div>
    <h1>@Model.Product.Name</h1>
    <hr />

    <img  src="@($"/images/{Model.Product.Id}.jpg")"
    
          alt="@Model.Product.Name"
          class="img-thumbnail"
          height="160"
          width="320"/>
    

    <p class="py-5 text-justify" >@Model.Product.Description</p>

    <dl>
        @foreach(var item in Model.Categories)
        {
            <dt><a>@item.Name</a></dt>
            <dd>@item.Description</dd>
        }

    </dl>

    <div>
        <a class="btn btn-primary"
        asp-controller="Home"
        asp-action="AddToCard"
        asp-route-ItemId="@Model.Product.ItemID"> Add to the selected Items</a>
    </div>

</div>



